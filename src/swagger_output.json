          },
          "role": {
            "type": "string",
            "example": "admin"
          },
          "token": {
            "type": "string",
            "example": "xxxxxxx"
          }
        },
        "required": [
          "username",
          "role",
          "token"
        ],
        "xml": {
          "name": "User"
        }
      },
      "Participant": {
        "type": "object",
