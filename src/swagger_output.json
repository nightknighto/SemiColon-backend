            },
            "$ref": "#/components/schemas/User"
          }
        },
        "required": [
          "status",
          "data"
        ],
        "xml": {
          "name": "Responses"
        }
      },
      "AllPars": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "type": "array",
            "items": {
              "xml": {
