            "example": ""
          },
          "pastExperience": {
            "type": "string",
            "example": ""
          },
          "collegeId": {
            "type": "string",
            "example": "18xxxxx"
          },
          "year": {
            "type": "string",
            "example": "Junior"
          },
          "acceptanceStatus": {
            "type": "string",
            "example": "accepted"
          },
          "emailedStatus": {
            "type": "string",
            "example": "true"
          }
        },
        "required": [
          "_id",
          "name",
          "email",
          "phone",
          "firstPreference",
          "secondPreference",
          "firstPrefReason",
          "firstPrefKnowledge",
          "secondPrefReason",
          "pastExperience",
          "collegeId",
          "year",
          "acceptanceStatus",
          "emailedStatus"
        ],
        "xml": {
          "name": "Participant"
        }
      },
      "Log": {
        "type": "object",
        "properties": {
          "adminId": {
            "type": "string",
            "example": ""
          },
          "adminPhone": {
            "type": "string",
            "example": "01xxxxxxxxx"
          },
          "participantId": {
            "type": "string",
            "example": ""
          },
          "action": {
            "type": "string",
            "example": "add"
          }
        },
        "required": [
          "adminId",
          "adminPhone",
          "participantId",
          "action"
        ],
        "xml": {
          "name": "Log"
        }
      },
      "LoginData": {
        "type": "object",
        "properties": {
          "phone": {
            "type": "string",
            "example": "01xxxxxxxxx"
          },
          "password": {
            "type": "string",
            "example": "********"
          }
        },
        "required": [
          "phone",
          "password"
